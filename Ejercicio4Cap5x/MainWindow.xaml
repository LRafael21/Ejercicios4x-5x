<Window x:Class="Ejercicio4Cap5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio4Cap5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <StackPanel Orientation="Vertical" Margin="10,0,10,0">


            <StackPanel Orientation="Vertical">

                <Label Content="Por favor Digite un número entero positivo:" HorizontalAlignment="Center" FontSize="35" Margin="0,50" />
                <TextBox x:Name="NumeroTextBox" Height="20" Width="150" Margin="0,10" />

            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,15" Width="75">

                <Button x:Name="EjecutarButton" Margin="5,0" Click="EjecutarButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Ejecutar" HorizontalAlignment="Center"  />
                    </StackPanel>
                </Button>
            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
